<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_key_list"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/key_adapter_date_textView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="2023.06.30 10:33"
            android:textSize="13sp"
            android:textColor="@color/A2A2A2"
            android:fontFamily="@font/notosans_regular_ttf"/>

        <TextView
            android:id="@+id/key_adapter_user_textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="홍길동"
            android:textSize="13sp"
            android:textColor="@color/A2A2A2"
            android:fontFamily="@font/notosans_regular_ttf"/>

        <TextView
            android:id="@+id/key_adapter_device_textView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="SM-1561"
            android:textSize="13sp"
            android:textColor="@color/A2A2A2"
            android:fontFamily="@font/notosans_regular_ttf"/>

        <TextView
            android:id="@+id/key_adapter_key_textView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="20"
            android:textSize="13sp"
            android:textColor="@color/A2A2A2"
            android:fontFamily="@font/notosans_regular_ttf"/>

    </LinearLayout>

</LinearLayout>