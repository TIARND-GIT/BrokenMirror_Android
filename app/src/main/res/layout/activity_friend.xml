                android:fontFamily="@font/notosans_regular_ttf"
                android:includeFontPadding="false"
                android:text="@string/friend_section_12"
                android:textColor="@color/c7c7c7"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/friend_index_11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/friend_index_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:fontFamily="@font/notosans_regular_ttf"
                android:includeFontPadding="false"
                android:text="@string/friend_section_13"
                android:textColor="@color/c7c7c7"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/friend_index_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/friend_index_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:fontFamily="@font/notosans_regular_ttf"
                android:includeFontPadding="false"
                android:text="@string/friend_section_14"
