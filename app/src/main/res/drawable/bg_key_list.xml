<!-- res/drawable/bottom_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item android:drawable="@color/white" />

    <!-- Bottom Stroke -->
    <item
        android:top="-10dp"
        android:left="-10dp"
        android:right="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/ECECEC" />
        </shape>
    </item>

</layer-list>